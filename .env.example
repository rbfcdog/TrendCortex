# TrendCortex Environment Variables
# Copy this file to .env and fill in your actual values

# WEEX API Credentials
WEEX_API_KEY=your_api_key_here
WEEX_API_SECRET=your_api_secret_here
WEEX_USER_ID=your_user_id_here

# Trading Configuration
TRADING_SYMBOLS=BTC/USDT,ETH/USDT,SOL/USDT
MAX_POSITION_SIZE=0.02
RISK_PER_TRADE=0.01

# AI Logging
AI_LOGGING_ENABLED=true
AI_LOGGING_ENDPOINT=https://ai-wars-api.weex.com/api/log

# Optional: LLM Configuration
# OPENAI_API_KEY=your_openai_key
# ANTHROPIC_API_KEY=your_anthropic_key

# Optional: Monitoring
# PROMETHEUS_PORT=9090
# GRAFANA_PORT=3000

# Optional: Health Check
# HEALTH_CHECK_PORT=8080

# Optional: Resource Limits
# MAX_MEMORY_MB=2048
# MAX_CPU_PERCENT=80

# Optional: Logging Level
# LOG_LEVEL=INFO
# LOG_TO_FILE=true

# Optional: Data Retention
# LOG_RETENTION_DAYS=30
# DATA_RETENTION_DAYS=90
